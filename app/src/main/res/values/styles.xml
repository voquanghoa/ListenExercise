<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MainMenuButtonMargin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">28</item>
    </style>
    <style name="MainMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">512</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="MainMenuRowButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1080</item>
    </style>
    <style name="MediaBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listen_line_height</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="MediaButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="ListenTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:padding">@dimen/text_title_padding</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
