<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MainMenuButtonMargin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">28</item>
    </style>
    <style name="MainMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">512</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="MainMenuRowButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1080</item>
    </style>
    <style name="MediaBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listen_line_height</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="MediaButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/media_control_button_margin_base</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="ListenTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:padding">@dimen/text_title_padding</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="RowItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/list_item_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/list_item_padding_left_right</item>
    </style>
    <style name="FolderItemText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="AdsPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="ConversationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="ImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="SubmitButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/submit_button_background</item>
    </style>
    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="AppTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_title_text</item>
        <item name="android:textSize">@dimen/app_title_font_size</item>
    </style>
</resources>
