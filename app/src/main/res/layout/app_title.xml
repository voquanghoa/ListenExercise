<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:background="@color/app_title"
    android:orientation="vertical"
    android:padding="@dimen/app_title_padding"
    >
    <com.lovelybroteam.listenexercise.control.EffectImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:id="@+id/left_title"
        style="@style/AppTitleText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_title_text_space"
        android:layout_toRightOf="@id/app_icon"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/center_title"
        style="@style/AppTitleText"
        android:layout_centerInParent="true"
        />
</RelativeLayout>