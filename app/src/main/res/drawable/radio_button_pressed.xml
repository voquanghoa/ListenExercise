<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/radio_button_size"
                android:height="@dimen/radio_button_size" />
            <stroke
                android:width="@dimen/radio_button_border_size"
                android:color="@color/radio_button_color" />
        </shape>
    </item>
    <item android:top="@dimen/radio_button_padding"
        android:bottom="@dimen/radio_button_padding"
        android:left="@dimen/radio_button_padding"
        android:right="@dimen/radio_button_padding"
        >
        <shape android:shape="oval">
            <size
                android:width="@dimen/radio_button_dot_size"
                android:height="@dimen/radio_button_dot_size" />
            <solid android:color="@color/radio_button_pressed_color" />
        </shape>
    </item>
</layer-list>